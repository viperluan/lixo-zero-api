{
  "name": "lixo-zero-api",
  "version": "1.0.0",
  "description": "API para aplicação do lixo zero.",
  "type": "module",
  "main": "./src/server.ts",
  "author": "Tecnomago",
  "license": "ISC",
  "scripts": {
    "build": "rimraf dist && tsup && npm run copy-ejs",
    "start": "prisma migrate deploy && node dist/server.cjs",
    "start:dev": "tsx watch src/server.ts",
    "start:debug": "tsx --inspect-brk src/server.ts",
    "lint": "eslint --report-unused-disable-directives --max-warnings 0",
    "copy-ejs": "copyfiles -u 1 src/infrastructure/smtp/templates/**/*.ejs dist/"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.15",
    "prisma": "^5.12.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@prisma/client": "^5.12.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/nodemailer": "^6.4.15",
    "@types/uuid": "^10.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.2.4",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0"
  }
}
